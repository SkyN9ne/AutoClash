<Page
    x:Class="AutoClash.Pages.Splash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#464646">
        <Canvas>
            <Image x:Name="SplashImage" Source="ms-appx:///Assets/SplashScreen.png"/>
        </Canvas>
        <StackPanel Name="ProgressPanel" >
            <ProgressRing IsActive="True" Height="75" Width="75" HorizontalAlignment="Center" Foreground="White"/>
            <TextBlock Name="splashStatus" Text="Loading...." Foreground="White" Width="200" TextAlignment="Center" FontWeight="Bold" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>